generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Contacto {
  id        Int      @id @default(autoincrement())
  nombre    String
  email     String
  edad      Int
  telefono  Int
  relacion  String
  usuarioId Int?
  usuario   Usuario? @relation(fields: [usuarioId], references: [id])
}

model Usuario {
  id                    Int                     @id @default(autoincrement())
  nombre                String                  @db.VarChar(255)
  apellido              String
  edad                  Int
  telefono              Int
  correo                String                  @unique
  password              String
  rol                   String
  genero                String
  nombreOrganizacion    String?
  ubicacion             String?
  areVulnerable         String?
  contactos             Contacto[]
  ResultadoCuestionario ResultadoCuestionario[]
  multimedia            Multimedia[]
  Modificacion          Modificacion[]
}

model ResultadoCuestionario {
  id            Int      @id @default(autoincrement())
  puntuacion    Int
  respuestas    Json
  usuarioId     Int?
  usuarioNombre String   @default("An√≥nimo")
  usuario       Usuario? @relation(fields: [usuarioId], references: [id])
}

model Organizacion {
  id            Int    @id @default(autoincrement())
  nombre        String
  ubicacion     String
  areVulnerable String
}

model Ubicacion {
  id       Int   @id @default(autoincrement())
  longitud Float
  latitud  Float
}

model Multimedia {
  id           Int            @id @default(autoincrement())
  foto         String
  audio        String
  fecha        DateTime       @default(now())
  longitud     Float
  latitud      Float
  estado       String?        @default("false")
  usuarioId    Int
  usuario      Usuario?       @relation(fields: [usuarioId], references: [id])
  Modificacion Modificacion[]
}

model Modificacion {
  id           Int         @id @default(autoincrement())
  fecha        DateTime    @default(now())
  usuarioId    Int?
  usuario      Usuario?    @relation(fields: [usuarioId], references: [id])
  multimedia   Multimedia? @relation(fields: [multimediaId], references: [id])
  multimediaId Int?
}

model informacion {
  id     Int     @id @default(autoincrement())
  titulo String
  cuerpo String
  url    String?
  imagen String?
  estado String? @default("false")
}
