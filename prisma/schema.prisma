generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Contacto {
  id        Int      @id @default(autoincrement())
  nombre    String
  apellido  String
  edad      Int
  telefono  Int
  relacion  String
  usuarioId Int?
  usuario   Usuario? @relation(fields: [usuarioId], references: [id])
}

model Usuario {
  id                    Int                     @id @default(autoincrement())
  nombre                String                  @db.VarChar(255)
  apellido              String
  edad                  Int
  telefono              Int
  carnet                Int
  correo                String
  password              String
  rol                   String
  genero                String
  Organizacion          Organizacion[]
  contactos             Contacto[]
  ResultadoCuestionario ResultadoCuestionario[]
  multimedia            Multimedia[]
}

model ResultadoCuestionario {
  id            Int      @id @default(autoincrement())
  puntuacion    Int
  respuestas    Json
  usuarioId     Int?
  usuarioNombre String   @default("An√≥nimo")
  usuario       Usuario? @relation(fields: [usuarioId], references: [id])
}

model Organizacion {
  id            Int            @id @default(autoincrement())
  nombre        String
  ubicacion     String
  areVulnerable String
  usuarioId     Int?
  usuario       Usuario?       @relation(fields: [usuarioId], references: [id])
  Modificacion  Modificacion[]
}

model Ubicacion {
  id       Int   @id @default(autoincrement())
  longitud Float
  latitud  Float
}

model Multimedia {
  id           Int            @id @default(autoincrement())
  foto         String
  audio        String
  fecha        DateTime       @default(now())
  longitud     Float
  latitud      Float
  estado       Boolean        @default(false)
  usuarioId    Int
  usuario      Usuario?       @relation(fields: [usuarioId], references: [id])
  Modificacion Modificacion[]
}

model Modificacion {
  id             Int           @id @default(autoincrement())
  fecha          DateTime      @default(now())
  organizacion   Organizacion? @relation(fields: [organizacionId], references: [id])
  organizacionId Int?
  multimedia     Multimedia?   @relation(fields: [multimediaId], references: [id])
  multimediaId   Int?
}
